@model IEnumerable<CarRentalSystem.Models.CustomerModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Dane Klienta</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Wypełnij formularz danymi.</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Imię
            </th>
            <th>
                Nazwisko
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-secondary">Edytuj</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-warning">Szczegóły</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id"class="btn btn-danger">Usuń</a>
            </td>
        </tr>
}
    </tbody>
</table>
